<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iems5722.group1.pharos">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/BaseTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.chatrooms.ChatRoomListActivity"
            android:label="@string/module_chatRoom_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            >
        </activity>
        <activity
            android:name=".module.contact.ContactActivity"
            android:label="@string/module_contact_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            >
        </activity>
        <activity
            android:name=".module.favorite.FavActivity"
            android:label="@string/module_fav_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            >
        </activity>
        <activity
            android:name=".module.SettingsActivity"
            android:label="@string/module_settings_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            >
        </activity>
    </application>

</manifest>